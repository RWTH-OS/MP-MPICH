CC          = @CC@
AR          = @AR@
LIBNAME     = @LIBNAME@
srcdir      = @srcdir@
CC_SHL      = @CC_SHL@
SHLIBNAME   = @SHLIBNAME@

INCLUDE_DIR = -I@MPI_INCLUDE_DIR@ -I${srcdir}/../include -I../include -I../common -I../ad_memfs
CFLAGS      = @CFLAGS@ $(INCLUDE_DIR)

C_COMPILE_SHL = $(CC_SHL) @CFLAGS@ $(INCLUDE_DIR)

@VPATH@

AD_TUNNELFS_OBJECTS = \
    ad_tunnelfs_comm.o ad_tunnelfs_datatype.o ad_tunnelfs_io.o \
    ad_tunnelfs_msg.o ad_tunnelfs_getsh.o ad_tunnelfs_err.o \
    ad_tunnelfs_close.o ad_tunnelfs_read.o ad_tunnelfs_rdcoll.o \
	ad_tunnelfs_wrcoll.o ad_tunnelfs_open.o ad_tunnelfs_write.o \
	ad_tunnelfs_done.o ad_tunnelfs_fcntl.o ad_tunnelfs_iread.o \
	ad_tunnelfs_iwrite.o ad_tunnelfs_wait.o ad_tunnelfs_flush.o \
	ad_tunnelfs_resize.o ad_tunnelfs_hints.o \
	ad_tunnelfs_delete.o ad_tunnelfs_globals.o ad_tunnelfs_request.o \
    ad_tunnelfs_server.o ad_tunnelfs_setsh.o ad_tunnelfs.o

default: $(LIBNAME)
	@if [ "@ENABLE_SHLIB@" != "none" ] ; then \
	    $(MAKE) $(SHLIBNAME).la ;\
	fi

.SUFFIXES: $(SUFFIXES) .p .lo

.c.o:
	$(CC) $(CFLAGS) -c $<
.c.lo:
	$(C_COMPILE_SHL) -c $<
	@mv -f $*.o $*.lo

$(LIBNAME): $(AD_TUNNELFS_OBJECTS)
	$(AR) $(LIBNAME) $(AD_TUNNELFS_OBJECTS)
	@touch build_io_server  

AD_TUNNELFS_LOOBJECTS=$(AD_TUNNELFS_OBJECTS:.o=.lo)
$(SHLIBNAME).la: $(AD_TUNNELFS_LOOBJECTS)
	$(AR) $(SHLIBNAME).la $(AD_TUNNELFS_LOOBJECTS)
	@touch build_io_server  

coverage:
	-@for file in  ${AD_TUNNELFS_OBJECTS:.o=.c} ; do \
		gcov -b -f $$file ; done

clean:
	@rm -f *.o *.lo

tidy:
	@indent *.c *.h
	@rm -f *~

distclean:
	@rm -f Makefile

