clean:
	@-rm -f *.o *~ PI* $(EXECS) core *.out coll.diff *.trace mpif.h \
		work.pc work.pcl ${srcdir}/*.o *.stdo

distclean: clean
	@-rm -f Makefile runtests

.c.o:
	$(CC) $(CFLAGS) -c $<
.c:
	$(CC) $(CFLAGS) -o $@ $< $(LIBS)
.f.o:
	$(F77) $(FFLAGS) $(OPTFLAGS) -c $<
