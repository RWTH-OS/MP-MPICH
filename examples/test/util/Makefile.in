ALL: default
##### User configurable options #####

MPIR_HOME    := @MPIR_HOME@
CC           := @MPICC@
CLINKER      := $(CC)
F77          := @MPIF77@
### End User configurable options ###

SHELL := /bin/sh
prefix     := @prefix@
top_srcdir := @top_srcdir@
srcdir     := @srcdir@
@VPATH@

PROFLIB :=
CFLAGS  := @CFLAGS@ @DEFS@
FFLAGS := @FFLAGS@
# Use LIBS to add any special libraries for C programs
LIBS := @LIB_PATH@ @LIB_LIST@
# Use FLIBS to add any special libraries for Fortran programs
FLIBS := @FLIB_PATH@ @LIB_LIST@
EXECS := checktestresult

default: $(EXECS)

#
# Note that runtests builds the executables as required
testing: default
linktest: default clean

all: default

clean:
	@-rm -f *.o *~ PI* $(EXECS) core *.out *.orig env.diff \
	argstest $(OTHEREXECS) mpif.h ${srcdir}/*.o *.stdo

distclean: clean
	@-rm -f Makefile runtests checktestresult.c


checktestresult.c:
	ln -s chkresult/checktestresult.c .

checktestresult: checktestresult.o
	$(CLINKER) $(CFLAGS) -o $@ $^ $(LIBS)

.c.o:
	$(CC) $(CFLAGS) -c $< -o $@
.f.o:
	$(F77) $(FFLAGS) -c $<
